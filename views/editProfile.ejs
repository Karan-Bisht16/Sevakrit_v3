<%- include("./partials/header.ejs") %>

<link rel="stylesheet" type="text/css" href="../../css/style_editProfile.css"> 
    
    <%- include("./flash.ejs") %>

    <div class="container">
        <div class="header">
            <h1 class="col-md-3">Edit Profile</h1>
            <div classs="col-md-8"></div>
            <a class="col-md-1" style="float: right; font-size: 26px; text-decoration: none;" href="/profile/user/<%= userData.name %>">Back</a>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-3 text-center">
                    <img src="../images/img-profile-pic.jpg" class="avatar" alt="Profile Picture">
                    <div class="col-12">
                        <label style="margin-top: 5px;"> <%= userData.name %></label>
                    </div>
            </div>

            <div class="col-md-8 personal-info">
                <div class="alert alert-info alert-dismissable" style="font-size: 18px;">
                    <!-- <a class="panel-close close" data-dismiss="alert">Ã—</a>  -->
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
                    <i class="fa fa-coffee"></i>
                    <strong>Remember</strong> the changes
                </div>
                <h3>Personal info</h3>

                <form class="form-horizontal" onsubmit="return dataValidation()" action="/editProfile/<%= userData._id %>?_method=PATCH" method="post">
                    <div class="form-group">
                        <label class="col-lg-3 control-label" for="naam">First name:</label>
                        <div class="col-lg-10">
                            <input class="form-control" type="text" value="<%=userData.name%>" id="name" name="name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label" for="mobile">Mobile:</label>
                        <div class="col-lg-10">
                            <input class="form-control" type="text" value="<%=userData.user_mobile_number%>" id="mobile" name="user_mobile_number">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-5 control-label" for="email">Email:</label>
                        <div class="col-lg-10">
                            <input class="form-control" type="text" value="<%=userData.email%>" id="email" name="email" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-5 control-label">Date of joining:</label>
                        <div class="col-lg-10">
                            <input class="form-control" type="text" value="<%=userData. user_date_of_joining %>" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input class="btn btn-primary" type="submit" value="Submit" style="font-size: 18px;">
                            <a href="/profile/user/<%= userData.name %>" class="cancel-btn" style="margin-left: 15px;">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include("./partials/footer.ejs") %>
    <script>
        function dataValidation() {
            let name = document.getElementById("name").value;
            let mobileNo = document.getElementById("mobile").value;
            if (name == "" || mobileNo == "") {
                alert("Blank values are not allowed.")
                return false;
            }
            else if (mobileNo.length > 10 || mobileNo.length < 10) {
                alert("Length of mobile number should be 10.")
                return false;
            }
            else if (isNaN(mobileNo)) {
                alert("Enter valid mobile number.");
                return false;
            }
            // else {
                return true;
            // }
        }
    </script>

</body>
</html>