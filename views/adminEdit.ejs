<title>Edit: <%= ngoParticular.name %></title>
<%- include("./partials/header.ejs") %>

<style>
    .container:not(footer .container) {
        margin: 5px 5px 25px 5px;
    }
    hr.divider {
        display: none;
    }
    @media (max-width: 600px) {
        .row:not(footer .row) {
            display: block !important;
            margin-bottom: 0 !important;
        }
        .col:not(footer .col) {
            margin-bottom: 10px !important;
        }
        hr.divider {
            display: block;
        }
    }
</style>

    <div class="container">
        <section class="main">
            <div class="main-top">
                <h1 class="head">Edit NGO</h1>
            </div>
            <hr>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/adminDashboard">Dashboard</a></li>
                    <li class="breadcrumb-item" aria-current="page">
                        <%= ngoParticular.name %>
                    </li>
                </ol>
            </nav>
            <form action="/adminEdit/<%= ngoParticular._id %>" method="post">
                <div class="row form-group mb-4">
                    <div class="col">
                        <label for="Name"> Name</label>
                        <input type="text" class="form-control" id="Name" name="name" value="<%= ngoParticular.name %>"
                            placeholder="Name" required>
                    </div>

                    <div class="col">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" name="email"
                            value="<%= ngoParticular.email %>" placeholder="Email" required>
                    </div>
                </div>

                <div class="row form-group mb-4">
                    <div class="col">
                        <label for="tel">NGO_registration_number</label>
                        <input type="text" class="form-control" id="tel" name="NGO_registration_number"
                            value="<%= ngoParticular.NGO_registration_number %>" placeholder="NGO_registration_number"
                            required>
                    </div>

                    <div class="col">
                        <label for="NGO_range">NGO_range</label>
                        <input type="number" class="form-control" id="NGO_range" name="NGO_range"
                            value="<%= ngoParticular.NGO_range %>" placeholder="NGO_range" required>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label for="NGO_webpage"> NGO webpage</label>
                    <input type="text" class="form-control" id="NGO_webpage" name="NGO_webpage"
                        value="<%= ngoParticular.NGO_webpage %>" placeholder=" NGO_webpage">
                </div>

                <div class="form-group mb-4">
                    <label for="NGO_sectors"> NGO sectors</label>
                    <input type="text" class="form-control" id="NGO_sectors" name="NGO_sectors"
                        value="<%= ngoParticular.NGO_sectors %>" placeholder=" NGO_sectors">
                </div>

                <div class="form-group mb-4">
                    <label for="NGO_address"> NGO Address</label>
                    <input type="text" class="form-control" id="NGO_address" name="NGO_address"
                        value="<%= ngoParticular.NGO_address.humanReadableAddress %>" placeholder="NGO address" required>
                </div>

                <div class="form-group mb-4">
                    <button type="submit" class="btn btn-primary">Update NGO</button>
                    <a href="/adminDashboard" style="text-decoration: none;" class="btn btn-secondary">Cancel</a>
                    <hr class="divider">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete NGO</button>
                </div>
            </form>

            <div id="error"> 
                <%= locals.error %>
            </div>

            <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="modal-title">Delete NGO record?</div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>
                                This action will remove the NGO record of 
                                <b class="fw-bold"><%= ngoParticular.name %></b> with Registration No. <b><%= ngoParticular.NGO_registration_number %></b><br />
                                Are you sure?
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                            <form action="/adminEdit/<%= ngoParticular._id %>?_method=DELETE" method="POST"
                                class="position-relative">
                                <button type="submit" class="btn btn-danger">Yes, remove NGO</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

<%- include("./partials/footer.ejs") %>

</body>
</html>