<style>
    :root {
        --green: green;
        --light-green: #368b44;
        --danger-red: #db4b40;
        --vibrant-green: rgb(11, 118, 11);
        --dark-green: rgba(36, 67, 40, 0.8);
        --haze-green: #9ae4c0;
    }

    .alert-success, .alert-danger {
        width: 40%;
        left: 50%;
        height: 75px;
        min-width: 300px;
        z-index: 100000;
        font-size: 20px;
        position: fixed;
        transform: translate(-50%);
    }

    strong {
        padding-top: 3px;
    }

    .alert-success {
        background-color: var(--haze-green);
        border: 1px solid var(--vibrant-green);
        color: var(--dark-green);
    }

    .btn-close {
        padding: 8px;
        margin-left: 20px;
        border-radius: 50%;
    }

    .alert-success>.btn-close:hover {
        background-color: var(--dark-green);
    }

    .alert-danger>.btn-close:hover {
        background-color: var(--danger-red);
    }

    .btn-close:hover {
        opacity: 0.8;
    }

    @media (max-width: 600px) {
        .alert-success, .alert-danger {
            width: 90%;
        }
    }
</style>

<% if (success && success.length){%>
    <div class="d-flex justify-content-center alert alert-success" role="alert">
        <strong><%= success %> <a href='/'>Return home</a>. </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>
<% if (error && error.length){%>
    <div class="d-flex justify-content-center alert alert-danger" role="alert">
        <strong><%= error %> </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>